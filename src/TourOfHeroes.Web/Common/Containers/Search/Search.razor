@inherits SearchBase

<input 
    class="form-control" 
    type="text"
    @bind-value="_searchText"
    @bind-value:event="oninput"
    @onkeyup="SearchHeroes"
    @onblur="ResetControl"
    autocomplete="off" 
    placeholder="Search"/>

@if (SearchState.Results.Any())
{
    <div class="card">
        <ul class="list-group list-group-flush">
            @foreach (var hero in SearchState.Results)
            {
                <li style="cursor:pointer" class="list-group-item" @onclick="@(() => NavigateToHeroDetails(hero.Id))">
                    @hero.Name
                </li>
            }
        </ul>
    </div>
}
@if (SearchState.NoResults)
{
    <div class="card">
        <li class="list-group-item">
            No Results!
        </li>
    </div>
}
